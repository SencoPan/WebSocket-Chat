doctype !html

head
    meta(charset='UTF-8')
    block links
        link(rel='stylesheet' type='text/css' href='./chatStyle.css')
    block title

body
    .content
        block content
        h1 Websocket App

        .UI
            .first-user
                .info
                    p Name: #{name || 'User - One'}
            .message-box
                .messages

                .input.auth
                    input(type='text' placeholder='Введите свое имя')
                    input(type='submit' value='Send')
                .input.message-sender(style={display:'none'})
                    input(type='text' placeholder='Введите сообщение')
                    input(type='submit' value='Send')
            .second-user
                .info
                    p Name: #{name || 'User - Two'}


block scripts
script(src='./client.js')